<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_transport_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/restaurantImageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/clearbus" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp" />

        <TextView
            android:id="@+id/bNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="My BusStationName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bNameTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="4.5/5"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/websiteTextView"
            android:layout_width="80dp"
            android:layout_height="7dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@color/colorPrimaryDark"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="View on Yelp"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@color/colorPrimaryDark"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="(503) 223-1282"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:baselineAligned="true"
            android:drawableLeft="@drawable/mancars"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="Embassava. Ongata rongao, Naekana, 97222"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saveRestaurantButton"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:background="@color/colorAccent"
            android:text="Save Vehicle"
            android:textColor="@drawable/clearbus"
            android:textSize="15sp" />

    </LinearLayout>


</FrameLayout>